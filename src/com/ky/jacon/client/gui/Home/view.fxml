<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="rootPane" prefHeight="500.0" prefWidth="750.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ky.jacon.client.gui.Home.Controller">
   <children>
      <JFXTabPane fx:id="tabPane">
         <tabs>
            <Tab fx:id="userTab" text="USER">
               <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <JFXButton layoutX="44.0" layoutY="27.0" onAction="#openVIewUserAction" prefHeight="50.0" prefWidth="180.0" styleClass="primary-button" text="USER MANAGEMENT" />
                     </children></AnchorPane>
               </content>
            </Tab>
            <Tab text="LIBRARY">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <JFXTabPane fx:id="libraryPane" layoutX="10.0" layoutY="11.0" prefHeight="440.0" prefWidth="734.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="6.0">
                           <tabs>
                              <Tab text="BASIC">
                                <content>
                                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                       <children>
                                          <JFXButton fx:id="viewBookButton" layoutX="277.0" layoutY="33.0" onAction="#openViewBookAction" prefHeight="50.0" prefWidth="180.0" styleClass="primary-button" text="VIEW BOOK" />
                                          <JFXButton layoutX="43.0" layoutY="33.0" onAction="#openReturnOrIssueBookAction" prefHeight="50.0" prefWidth="180.0" styleClass="primary-button" text="ISSUE/RETURN BOOK" />
                                          <JFXButton fx:id="viewBookedBtn" layoutX="43.0" layoutY="99.0" onAction="#openBookedAction" prefHeight="50.0" prefWidth="180.0" styleClass="primary-button" text="VIEW BOOKED" />
                                       </children>
                                    </AnchorPane>
                                </content>
                              </Tab>
                              <Tab fx:id="libraryManagementTab" text="MANAGEMENT">
                                <content>
                                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                       <children>
                                          <JFXButton layoutX="277.0" layoutY="30.0" onAction="#openViewIssueAction" prefHeight="50.0" prefWidth="180.0" styleClass="primary-button" text="VIEW ISSUE" />
                                          <JFXButton layoutX="37.0" layoutY="30.0" onAction="#openAddBookAction" prefHeight="50.0" prefWidth="180.0" styleClass="primary-button" text="ADD BOOK" />
                                       </children>
                                    </AnchorPane>
                                </content>
                              </Tab>
                           </tabs></JFXTabPane>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab disable="true">
               <graphic>
                  <JFXButton id="logout-button" onAction="#logoutAction" prefHeight="26.0" prefWidth="101.0" text="LOGOUT" />
               </graphic>
            </Tab>
         </tabs>
      </JFXTabPane>
   </children>
</StackPane>
