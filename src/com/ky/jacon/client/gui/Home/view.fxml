<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="rootPane" prefHeight="500.0" prefWidth="750.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ky.jacon.client.gui.Home.Controller">
   <children>
      <JFXTabPane>
         <tabs>
            <Tab fx:id="homeTab" onSelectionChanged="#changingTabAction" text="HOME">
               <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
            <Tab text="LIBRARY">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <JFXTabPane layoutX="308.0" layoutY="11.0" prefHeight="440.0" prefWidth="422.0" AnchorPane.leftAnchor="308.0" AnchorPane.rightAnchor="20.0" />
                        <JFXButton layoutX="35.0" layoutY="35.0" onAction="#openAddBookAction" prefHeight="53.0" prefWidth="132.0" styleClass="primary-button" text="ADD BOOK" />
                        <JFXButton fx:id="viewBookButton" layoutX="199.0" layoutY="35.0" onAction="#openViewBookAction" prefHeight="53.0" prefWidth="132.0" styleClass="primary-button" text="VIEW BOOK" />
                        <JFXButton layoutX="35.0" layoutY="109.0" onAction="#openReturnOrIssueBookAction" prefHeight="53.0" prefWidth="132.0" styleClass="primary-button" text="ISSUE/RETURN BOOK" />
                        <JFXButton layoutX="199.0" layoutY="109.0" onAction="#openViewIssueAction" prefHeight="53.0" prefWidth="132.0" styleClass="primary-button" text="VIEW ISSUE" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab disable="true">
               <graphic>
                  <JFXButton id="logout-button" onAction="#logoutAction" prefHeight="26.0" prefWidth="101.0" text="LOGOUT" />
               </graphic>
            </Tab>
         </tabs>
      </JFXTabPane>
   </children>
</StackPane>
